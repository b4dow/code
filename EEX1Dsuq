<li class="li1"><div class="de1">&nbsp; <span class="kw1">elif</span> <span class="br0">&#91;</span><span class="br0">&#91;</span> <span class="re1">$KEYMAP</span> == main <span class="br0">&#93;</span><span class="br0">&#93;</span> <span class="sy0">||</span> <span class="br0">&#91;</span><span class="br0">&#91;</span> <span class="re1">$KEYMAP</span> == viins <span class="br0">&#93;</span><span class="br0">&#93;</span> <span class="sy0">||</span> <span class="br0">&#91;</span><span class="br0">&#91;</span> <span class="re1">$KEYMAP</span> = <span class="st_h">''</span> <span class="br0">&#93;</span><span class="br0">&#93;</span> <span class="sy0">||</span> <span class="br0">&#91;</span><span class="br0">&#91;</span> <span class="re4">$1</span> = <span class="st_h">'beam'</span> <span class="br0">&#93;</span><span class="br0">&#93;</span>; <span class="kw1">then</span></div></li>
